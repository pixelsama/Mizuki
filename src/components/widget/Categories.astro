---
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { getCategoryList } from "../../utils/content-utils";
import ButtonLink from "../control/ButtonLink.astro";
import WidgetLayout from "./WidgetLayout.astro";
import { widgetManager } from "../../utils/widget-manager";

const categories = await getCategoryList();

const COLLAPSED_HEIGHT = "7.5rem";

// 使用统一的组件管理器检查是否应该折叠
const categoriesComponent = widgetManager.config.components.find(c => c.type === "categories");
const isCollapsed = categoriesComponent ? widgetManager.isCollapsed(categoriesComponent, categories.length) : false;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---

<WidgetLayout name={i18n(I18nKey.categories)} id="categories" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT}
                class={className} style={style}
>
    {categories.map((c) =>
        <ButtonLink
            url={c.url}
            badge={String(c.count)}
            label={`View all posts in the ${c.name.trim()} category`}
        >
            {c.name.trim()}
        </ButtonLink>
    )}
</WidgetLayout>

<script>
    function checkCategoriesVisibility() {
        const widgetLayout = document.querySelector('widget-layout[data-id="categories"]');
        if (!widgetLayout) return;

        // 检查是否在文章页
        const isPostPage = window.location.pathname.includes('/posts/');
        if (isPostPage) {
            // 在文章页隐藏分类
            widgetLayout.style.display = 'none';
        } else {
            // 非文章页显示分类
            widgetLayout.style.display = '';
        }
    }

    // 页面加载时检查
    document.addEventListener('DOMContentLoaded', checkCategoriesVisibility);

    // Swup 页面切换时检查
    document.addEventListener('swup:page:view', checkCategoriesVisibility);
</script>